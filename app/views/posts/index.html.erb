<index class="index">
  <h1>Posts </h1> 
    <% if user_signed_in?%>
    <h2><%= link_to 'New post', new_post_path %></h2>
    <% end %>
  <table>
    <tr>
      <th>Title</th>
      <th>Text</th>
      <th>Posted By</th>
      <th>Date</th>
    </tr>
 
  <% @posts.each do |post| %>
    <tr>
      <td class="titlename"><%= post.title %></td>
      <td><%= post.text[0..7] %></td>
      <td class="useremailtext"><%= post.user.email %></td>
      <td class="timestamp"><%= post.created_at %></td>
      <td class="postoptions"><%= link_to 'Show', post %></td>
      <% if current_user == post.user %>
      <td class="postoptions"><%= link_to 'Edit', edit_post_path(post) %></td>
      <td class="postoptions"><%= link_to 'Destroy', post_path(post),
                    method: :delete, data: { confirm: 'Are you sure?'}
    %> <% end %></td>
    </tr>
  <% end %>
  </table>
</index>